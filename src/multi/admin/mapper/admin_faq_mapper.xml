<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="admin_faq">

	<select id="sysdate" resultType="java.lang.String">
		SELECT NOW()
	</select>

	<!-- 
	프로시져 pfindAllTexts 김소영
	DROP PROCEDURE IF EXISTS p_faq_FindAllTexts;
	DELIMITER $$
	CREATE PROCEDURE p_faq_FindAllTexts()
	BEGIN
		SELECT * FROM faqT ORDER BY faq_no DESC;
	END$$
	DELIMITER ;
	-->
 	<resultMap id="RM_Text" type="multi.admin.vo.Admin_FaqVO">
		<result property="faq_no" column="faq_no" jdbcType="INTEGER" />
		<result property="faq_title" column="faq_title" jdbcType="VARCHAR" />
		<result property="faq_content" column="faq_content" jdbcType="VARCHAR" />
	</resultMap>
	<select id="p_faq_FindAllTexts" statementType="CALLABLE" resultMap="RM_Text">
		{call p_faq_FindAllTexts()}
	</select>


	<!-- 
	DROP PROCEDURE IF EXISTS p_faq_readFaq;
	DELIMITER $$
	CREATE PROCEDURE p_faq_readFaq(
		IN v_faq_no INT
		)
	BEGIN
		SELECT * FROM FaqT WHERE faq_no = v_faq_no;
	END$$
	DELIMITER ;	
	CALL p_faq_readFaq(1);
	-->
	<parameterMap id="PM_p_faq_readFaq" type="multi.admin.vo.Admin_FaqVO" >
		<parameter property="faq_no" mode="IN" jdbcType="INTEGER" />
	</parameterMap >
	<resultMap id="RM_p_faq_readFaq" type="multi.admin.vo.Admin_FaqVO">
		<result property="faq_no" column="faq_no" jdbcType="INTEGER" />
		<result property="faq_title" column="faq_title" jdbcType="VARCHAR" />
		<result property="faq_content" column="faq_content" jdbcType="VARCHAR" />
	</resultMap>
	<select id="p_faq_readFaq" statementType="CALLABLE" 
		resultMap="RM_p_faq_readFaq"
		parameterMap="PM_p_faq_readFaq">
		{call p_faq_readFaq(?)}
	</select>

	<!--
	DROP PROCEDURE IF EXISTS p_faq_modifyFaq;
	DELIMITER $$
	CREATE PROCEDURE p_faq_modifyFaq(
		IN v_faq_no INT,
		IN v_faq_title TEXT,
		IN v_faq_content TEXT
		)
	BEGIN
		UPDATE faqT SET faq_title = v_faq_title, faq_content = v_faq_content  WHERE faq_no = v_faq_no;
	END$$
	DELIMITER ;
	CALL p_faq_modifyFaq (1,'tt','good');
	-->
	<parameterMap id="PM_p_faq_modifyFaq" type="multi.admin.vo.Admin_FaqVO" >
		<parameter property="faq_no" mode="IN" jdbcType="INTEGER"/>
		<parameter property="faq_title" mode="IN" jdbcType="VARCHAR"/>
		<parameter property="faq_content" mode="IN" jdbcType="VARCHAR"/>
	</parameterMap>
	<update id="p_faq_modifyFaq" statementType="CALLABLE"
		parameterType = "multi.admin.vo.Admin_FaqVO"
		parameterMap = "PM_p_faq_modifyFaq">
		{call p_faq_modifyFaq(?,?,?)}
	</update>
	
	
	<!--
	DROP PROCEDURE IF EXISTS p_faq_delFaq;
	DELIMITER $$
	CREATE PROCEDURE p_faq_delFaq(
		IN v_faq_no INT
		)
	BEGIN
		DELETE FROM FaqT WHERE faq_no = v_faq_no;
	END$$
	DELIMITER ;
	CALL p_faq_delFaq (1);
	-->
	<parameterMap id="PM_p_faq_delFaq" type="multi.admin.vo.Admin_FaqVO" >
		<parameter property="faq_no" mode="IN" jdbcType="INTEGER"/>
	</parameterMap>
	<delete id="p_faq_delFaq" statementType="CALLABLE"
		parameterType = "multi.admin.vo.Admin_FaqVO"
		parameterMap = "PM_p_faq_delFaq">
		{call p_faq_delFaq(?)}
	</delete>
	
	
	<!--
	DROP PROCEDURE IF EXISTS p_faq_addFaq;
	DELIMITER $$
	CREATE PROCEDURE p_faq_addFaq(
		IN v_faq_title TEXT,
		IN v_faq_content TEXT
		)
	BEGIN
		INSERT INTO FaqT VALUES(default,v_faq_title, v_faq_content );
	END$$
	DELIMITER ;	
	CALL p_faq_addFaq ( 'test2', 'nice' );
	-->
	<parameterMap id="PM_p_faq_addFaq" type="multi.admin.vo.Admin_FaqVO" >
		<parameter property="faq_title" mode="IN" jdbcType="VARCHAR"/>
		<parameter property="faq_content" mode="IN" jdbcType="VARCHAR"/>
	</parameterMap>
	<insert id="p_faq_addFaq" statementType="CALLABLE"
		parameterType = "multi.admin.vo.Admin_FaqVO"
		parameterMap = "PM_p_faq_addFaq">
		{call p_faq_addFaq(?,?)}
	</insert>
	
</mapper>

